@model TCCnew.Models.Funcionario
@{
    ViewBag.Title = "Login";
}

<div class=" container">
    <div class="row">
        <h2 class="title">Entrar</h2>
    </div>
    <div class="row">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class="text-danger"})
                <div class="form-group">
                    @Html.LabelFor(u => u.Usuario, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u=>u.Usuario, "", new { @class="text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Cpf, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.PasswordFor(u => u.Cpf, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Usuario, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        @Html.CheckBoxFor(u=>u.LembrarMe)
                        @Html.LabelFor(u=>u.LembrarMe)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" class="btn btn-success" value="Entrar" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

