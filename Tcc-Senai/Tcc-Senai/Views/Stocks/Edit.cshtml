@model TCC_Senai.Models.Stock

@{
    ViewBag.Title = "Edit";
}

<div class="text-center">
    <h2>Edit</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <h4>Stock</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.TotalAmmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div align="center">
                @Html.EditorFor(model => model.TotalAmmount, new { htmlAttributes = new { @class = "form-control col-xs-6 col-md-4" } })
                @Html.ValidationMessageFor(model => model.TotalAmmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AvailableAmmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div align="center">
                @Html.EditorFor(model => model.AvailableAmmount, new { htmlAttributes = new { @class = "form-control col-xs-6 col-md-4" } })
                @Html.ValidationMessageFor(model => model.AvailableAmmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductId, "ProductId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div align="center">
                @Html.DropDownList("ProductId", null, htmlAttributes: new { @class = "form-control col-xs-6 col-md-4" })
                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-secondary center-block" />
        </div>
    </div>
}

<div align="center">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}