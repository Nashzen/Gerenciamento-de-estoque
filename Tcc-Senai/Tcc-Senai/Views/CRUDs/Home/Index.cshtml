@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- main -->

<div class="main">
    <div class="main-w3lsrow">
        <!-- login form -->
        <div class="login-form login-form-left">
            <div class="agile-row">
                <h1>Login</h1>
                <div class="login-agileits-top">
                    <form action="#" method="post">
                        <p>Login</p>
                        <input type="text" class="name" name="Usuário" required="" />
                        <p>Password</p>
                        <input type="password" class="password" name="Senha" required="" />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="CheckRemember">
                            <label class="form-check-label" for="defaultCheck1">
                                <font color="#FFFFFF">Lembrar de mim?</font>
                            </label>
                        </div>
                        <input type="submit" value="Login">
                    </form>
                </div>
                <div class="login-agileits-bottom">
                    <h6><a href="#">Esqueceu a senha?</a></h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- //main -->
